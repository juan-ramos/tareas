def descuento(producto, precio):
    if producto == "manzana":
        precio = precio*0.85
    elif producto == "papa":
        precio = precio*0.75
    elif producto == "cilantro":
        precio = precio*0.88
    elif producto == "elotes":
        precio = precio*0.86
    return precio

def iva(precio):
    precio = precio*1.16
    return precio

